<div class="container">
  <div class="cart row">
    <div class="order-not-paid col-8">
      <ul>
        <% @user.orders.where(paid: false).each do |order| %>
          <li><%= render "./orders/card_order", order: order %></li>
        <% end %>
      </ul>
    </div>
    <div class="go-paid col-4">
      <div class="exp">
        <p><%= @user.orders.where(paid: false).count %> Articles</p>
        <p><% @total = 0 %>
        <% @user.orders.where(paid: false).each do |order|%>
          <% @total += order.flower.price %>
          <%= @total %>€
        <% end %>
        </p>
      </div>
      <div class="exp">
        <p>Expédition</p>
        <p>gratuite</p>
      </div>
      <hr>
      <div class="exp">
        <p>Total TTC</p>
        <p><%= @total %>€</p>
      </div>
      <hr>
      <div class="but-com">
        <%= link_to "Commander", class: 'btn btn-outline-success' %>
      </div>
    </div>
  </div>
</div>
